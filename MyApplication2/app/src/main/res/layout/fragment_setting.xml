<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        android:scrollbars="vertical">



        <FrameLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="vertical"
                    android:showDividers="end">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/material_16dp"
                        android:text="@string/stock_setting"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/cardview_line_size" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/deleteDataBaseRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_64dp"
                    android:layout_marginLeft="@dimen/material_8dp"
                    android:layout_marginRight="@dimen/material_8dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/material_24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_8dp"
                        android:padding="@dimen/material_6dp"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_view_agenda_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_64dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/material_8dp"
                            android:layout_marginRight="@dimen/material_8dp"
                            android:text="@string/delete_database_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                            android:textColor="@color/md_text"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/md_grey_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reportDeleteRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_64dp"
                    android:layout_marginLeft="@dimen/material_8dp"
                    android:layout_marginRight="@dimen/material_8dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_8dp"
                        android:padding="@dimen/material_6dp"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_assignment_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_64dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/material_8dp"
                            android:layout_marginRight="@dimen/material_8dp"
                            android:text="@string/delete_report"
                            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                            android:textColor="@color/md_text"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/md_grey_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/backupRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_64dp"
                    android:layout_marginLeft="@dimen/material_8dp"
                    android:layout_marginRight="@dimen/material_8dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_8dp"
                        android:padding="@dimen/material_6dp"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_next_week_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_64dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/material_8dp"
                            android:layout_marginRight="@dimen/material_8dp"
                            android:text="@string/backup_week_month_daily"
                            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                            android:textColor="@color/md_text"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/md_grey_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/caseRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_64dp"
                    android:layout_marginLeft="@dimen/material_8dp"
                    android:layout_marginRight="@dimen/material_8dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_8dp"
                        android:padding="@dimen/material_6dp"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_monetization_on_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_64dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/material_8dp"
                            android:layout_marginRight="@dimen/material_8dp"
                            android:text="@string/app_case_information"
                            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                            android:textColor="@color/md_text"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/md_grey_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/errorStockRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_64dp"
                    android:layout_marginLeft="@dimen/material_8dp"
                    android:layout_marginRight="@dimen/material_8dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_8dp"
                        android:padding="@dimen/material_6dp"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_error_outline_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_64dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/material_8dp"
                            android:layout_marginRight="@dimen/material_8dp"
                            android:text="@string/app_error_stock_info"
                            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                            android:textColor="@color/md_text"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/md_grey_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/informationRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_64dp"
                    android:layout_marginLeft="@dimen/material_8dp"
                    android:layout_marginRight="@dimen/material_8dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_8dp"
                        android:padding="@dimen/material_6dp"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_info_outline_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/material_64dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/material_8dp"
                            android:layout_marginRight="@dimen/material_8dp"
                            android:text="@string/app_information"
                            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                            android:textColor="@color/md_text"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/md_grey_200" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>
